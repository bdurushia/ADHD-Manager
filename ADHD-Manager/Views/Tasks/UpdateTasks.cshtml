@model Tasks

<h2>Update @Model.Title</h2>

<div class="card m-2" style="width: 60rem;">
    <div class="card-body">
        @using (Html.BeginForm("UpdateTaskToDatabase", "Tasks", "Post"))
        {
            <input asp-for="TaskID" type="hidden" value="@Model.TaskID"/>

            <label asp-for="Title" class="control-label">Title</label>
            <input type="text" name="Title" class="form-control" value="@Model.Title"/>

            <label asp-for="DueDate" class="control-label">Date Due</label>
            <input type="datetime" name="DueDate" class="form-control" value="@Model.DueDate" />

            <label asp-for="Description" class="control-label">Description</label>
            <input type="text" name="Description" class="form-control" value="@Model.Description"/>


            <div class="form-group">
                <label for="">Select Status</label>
                <select class="form-control" name="StatusID" value="">
                    @foreach (var stat in Model.Statuses)
                    {
                        <option value="@stat.StatusId">@stat.StatusId @stat.Name</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="">Select Category</label>
                <select class="form-control" name="CategoryID" value="">
                    @foreach (var cat in Model.Categories)
                    {
                        <option value="@cat.CategoryId">@cat.CategoryId @cat.Name</option>
                    }
                </select>
            </div>

            <input type="submit" value="Update Task" class="btn btn-outline-dark text-bg-dark m-2"/>

        }
    </div>
</div>