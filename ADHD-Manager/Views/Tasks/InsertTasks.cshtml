@model Tasks

<h2>Create New Task</h2>

@using (Html.BeginForm("InsertTaskToDatabase", "Tasks", "Post"))
{
    <input asp-for="TaskID" type="hidden" value=""/>

    <label asp-for="Title" class="control-label">Title</label>
    <input type="text" name="Title" class="form-control" value=""/>

    <label asp-for="Description" class="control-label">Description</label>
    <input type="text" name="Description" class="form-control" value=""/>

    <label asp-for="DueDate" class="control-label">Date Due</label>
    <input type="datetime" name="DueDate" class="form-control" value=""/>

    <div class="form-group">
        <label for="">Select Category</label>
        <select class="form-control" name="CategoryID" value="">
            @foreach (var cat in Model.Categories)
            {
                <option value="@cat.CategoryId">@cat.CategoryId @cat.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="">Select Status</label>
        <select class="form-control" name="StatusID" value="">
            @foreach (var stat in Model.Statuses)
            {
                <option value="@stat.StatusId">@stat.StatusId @stat.Name</option>
            }
        </select>
    </div>

    <input type="submit" value="Create Task" class="btn btn-outline-dark mt-2 me-2" />
    <a class="btn btn-outline-danger mt-2 ms-2" asp-area="" asp-controller="Tasks" asp-action="Index">Cancel</a>
}
